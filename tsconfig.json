{
    "compilerOptions": {
        "jsx": "react-jsx",
        "jsxImportSource": "preact",
        "module": "es6",
        "moduleResolution": "node",
        "noImplicitAny": false,
        "outDir": "./dist",
        "target": "es5",
        "strict": true,
        "sourceMap": false,
        "esModuleInterop": false,
    },
    "exclude": [
        "node_modules",
        "../../node_modules",
        "build/*"
    ],

    "include": [
        "src/**/*"
    ],
   
}